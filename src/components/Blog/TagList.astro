---
interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---

<div class="tags">
    {
        tags.map((tag, i) => (
            <>
                {<a href={`/tags/${tag}`}>{tag}</a>}
                {i != tags.length - 1 && ", "}
            </>
        ))
    }
</div>

<style lang="scss">
    a {
        color: pink;
    }
</style>
